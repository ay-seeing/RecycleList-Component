.RecycleList{
  position:relative;
  box-sizing: border-box;
}
.heightItem{
  position:absolute;
  left:0;
  top:0;
  height:300rpx;
  transform: translateX(-300rpx);
}

.column-2, .column-3{
  display:flex;
  flex-wrap: wrap;
}
.column-2 .recycleList-item{
  width:50%;
}
.column-3 .recycleList-item{
  width:33.333%;
}

.scroll-after .loadding{
  padding: 10rpx 0;
  text-align: center;
}
